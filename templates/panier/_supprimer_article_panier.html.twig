<form class="form-inline" method="post" action="{{ path('panier_supprimer', {'id': produit.id}) }}" onsubmit="return confirm('{{'panier.supp.alert'|trans}}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('supprimer_article' ~ produit.id) }}">
    <button class="btn btn-danger">{{'panier.supp.supprimer'|trans}}</button>
</form>
