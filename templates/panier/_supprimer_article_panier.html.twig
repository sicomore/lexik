<form class="form-inline" method="post" action="{{ path('panier_supprimer', {'id': produit.produitId}) }}" onsubmit="return confirm('Etes-vous certain de vouloir supprimer cet article ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('supprimer_article' ~ produit.produitId) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
